<Window x:Class="Air.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:convertors="clr-namespace:AirControl.Convertors;assembly=AirControl"
        mc:Ignorable="d" 
        Title="MainWindow">

    <Window.Resources>
        <Style x:Key="{x:Type TabItem}" TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="grid">
                            <ContentPresenter x:Name="ContentPresenter"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header">
                            </ContentPresenter>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="grid" Property="Background" Value="LightSkyBlue"></Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="grid" Property="Background" Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TabControl Margin="20" Background="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Background}">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="border" Background="{TemplateBinding Background}">
                                        <ContentPresenter x:Name="ContentPresenter"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Margin="10 2 "
                                                          ContentSource="Header">
                                        </ContentPresenter>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <!-- <Setter TargetName="border" Property="Background" Value="LightSkyBlue"/> -->
                                            <Setter TargetName="border" Property="BorderThickness" Value="0 0 0 1"></Setter>
                                            <Setter TargetName="border" Property="BorderBrush" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="border" Property="Background" Value="White"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="switzerland">
                    <Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border x:Name="out"  CornerRadius="8" Opacity=".5" 
                                    BorderThickness="4"  BorderBrush="CadetBlue" Background="LightBlue">
                                <Border x:Name="In" BorderThickness="4" CornerRadius="4"
                                        BorderBrush="DarkRed" Background="LightGray">
                                    <TextBlock FontSize="14" Text="Yann Sommer" Margin="40"/>
                                </Border>
                            </Border>

                        </StackPanel>
                    </Grid>

                </TabItem>
                <TabItem Margin="0 0 0 0">
                    <TabItem.Header>
                        <TextBlock Text="France"></TextBlock>
                    </TabItem.Header>
                </TabItem>
                <TabItem Margin="0 0 0 0" Header="Argentina" />
            </TabControl>
        </Grid>
        <ScrollViewer Grid.Column="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10 0 10 0" Orientation="Vertical">
                        <AirButton Content="Hello" Type="Main" HorizontalAlignment="Center"
                                   FontSize="16" Margin="10" />
                        <AirButton Content="There" HorizontalAlignment="Center"
                                   Margin="10" Type="Default" FontSize="16" />
                    </StackPanel>
                    <AirButton IsEnabled="False" Content="Jakic"
                               VerticalAlignment="Center" FontSize="18" />
                </StackPanel>
                <StackPanel Margin="10 0 10 0" Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <AirButton Content="Hello" Type="Main" Margin="10"
                               FontSize="16" />
                    <AirButton Content="There" Type="Default"
                               Margin="10" FontSize="16" />
                    <Button Content="Jakvic" FontSize="16" Padding="6"
                            VerticalAlignment="Center" Click="Button_Click" />
                </StackPanel>

                <GroupBox Header="TextBox" HorizontalAlignment="Center" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel>
                            <TextBox Text="{Binding ElementName=AirTextBox,Path=Background}"
                                     FontSize="18" Padding="4" MinWidth="80" MaxWidth="80"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" />

                            <AirTextBox IsEnabled="False" Text="Fuck" FontSize="18" Margin="10"
                                        Width="60"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />

                        </WrapPanel>

                        <StackPanel Orientation="Vertical">
                            <AirTextBox HelpText="Write..."
                                        FontSize="18" Margin="0"
                                        Width="150" x:Name="AirTextBox"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="ProgressBar" Margin="10 20 10 0"
                          HorizontalAlignment="Center" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <AirProgressBar Value="60"
                                        CornerRadius="0"
                                        Margin="0 20 0 0"
                                        Width="200" Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />

                        <AirProgressBar Value="40" CornerRadius="8"
                                        Margin="0 10 0 0 "
                                        BorderBrush="Transparent"
                                        Width="200" Height="16"
                                        IsIndeterminate="True"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />

                        <AirProgressBar Value="30" CornerRadius="10"
                                        Margin="0 10 0 0 "
                                        IsIndeterminate="True"
                                        Width="200" Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                        <ProgressBar Value="40" Margin="0 10 0 0" Width="200" VerticalAlignment="Center"
                                     Height="20" IsIndeterminate="True" HorizontalAlignment="Center" />

                        <ProgressBar Value="60" Margin="0 10 0 0" Width="200" VerticalAlignment="Center"
                                     Height="20" HorizontalAlignment="Center" />

                    </StackPanel>

                </GroupBox>

            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1" />
    </Grid>
</Window>