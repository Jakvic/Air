<Window x:Class="Air.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Air"
        mc:Ignorable="d"
        Title="MainWindow" d:DataContext="{d:DesignInstance local:Person}">
    <Window.DataContext>
        <local:Person Gender="Male" Name="Jakvic" />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <AirPanel Type="Vertical" Space="10" Margin="10">
                <AirButton Content="Button" Type="Main" />
                <AirButton Content="AirPanel" Type="Main" />
            </AirPanel>
        </Grid>
        <Grid Grid.Column="1">
            <AirBorder BorderBrush="LightGray" Margin="10"
                       BorderThickness="1" CornerRadius="8">
                
            </AirBorder>
        </Grid>
        <Grid Grid.Column="1" />
    </Grid>
</Window>