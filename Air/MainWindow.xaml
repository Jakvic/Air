<Window x:Class="Air.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:convertors="clr-namespace:AirControl.Convertors;assembly=AirControl"
        mc:Ignorable="d"
        Title="MainWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="1">
            <StackPanel Background="#FAFAFA">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10 0 10 0" Orientation="Vertical">
                        <AirButton Content="Hello" Type="Main" HorizontalAlignment="Center"
                                   FontSize="16" Margin="10" />
                        <AirButton Content="There" HorizontalAlignment="Center"
                                   Margin="10" Type="Default" FontSize="16" />
                    </StackPanel>
                    <AirButton IsEnabled="False" Content="Jakic"
                               VerticalAlignment="Center" FontSize="18" />
                </StackPanel>
                <StackPanel Margin="10 0 10 0" Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <AirButton Content="Hello" Type="Main" Margin="10"
                               FontSize="16" />
                    <AirButton Content="There" Type="Default"
                               Margin="10" FontSize="16" />
                    <Button Content="Jakvic" FontSize="16" Padding="6"
                            VerticalAlignment="Center" Click="Button_Click" />
                </StackPanel>

                <GroupBox Header="TextBox" HorizontalAlignment="Center" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel>
                            <TextBox Text="{Binding ElementName=AirTextBox,Path=Background}"
                                     FontSize="18" Padding="4" MinWidth="80" MaxWidth="80"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" />

                            <AirTextBox IsEnabled="False" Text="Fuck" FontSize="18" Margin="10"
                                        Width="60"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />

                        </WrapPanel>

                        <StackPanel Orientation="Vertical">
                            <AirTextBox HelpText="Write..." FontSize="18" Margin="0"
                                        Width="150" x:Name="AirTextBox"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="ProgressBar" Margin="10 20 10 0"
                          HorizontalAlignment="Center" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <Rectangle RadiusX="10" RadiusY="10" 
                                   Width="240" Height="60"
                                   Fill="LightGreen" Stroke="Red" StrokeThickness="2"/>

                        <Border x:Name="bd" Margin="0 20 0 0" Width="240" 
                                BorderThickness="2" CornerRadius="10"
                                Background="#E1E1E1" BorderBrush="Red" Height="60">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="11" RadiusY="11">
                                    <RectangleGeometry.Rect>
                                        <Rect Width="240"
                                              Height="60"/>
                                    </RectangleGeometry.Rect>
                                </RectangleGeometry>
                            </Border.Clip>
                            <Border Width="250" Height="70" Background="LightGreen"/>
                        </Border>
                        <AirProgressBar Value="100" IsEnabled="False" 
                                        Margin="0 20 0 0"
                                        Width="80" Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />

                        <AirProgressBar Value="40" CornerRadius="8"
                                        Margin="0 10 0 0 "
                                        BorderBrush="Transparent"
                                        Width="200" Height="16"
                                        IsIndeterminate="True"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />

                        <AirProgressBar Value="30" CornerRadius="10"
                                        Margin="0 10 0 0 "
                                        IsIndeterminate="True"
                                        Width="200" Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                        <ProgressBar Value="40" Margin="0 10 0 0" Width="200" VerticalAlignment="Center"
                                     Height="20" IsIndeterminate="True" HorizontalAlignment="Center" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Animation" Margin="10 20 10 0"
                          Padding="10" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <AirBorder Width="200" Height="40" CornerRadius="8"
                                   BorderThickness="2" BorderBrush="DarkRed" Opacity="0.6">
                            <Border Width="210" Height="50" Background="LightBlue"/>
                        </AirBorder>
                        <Border x:Name="border" CornerRadius="10" Width="240"
                                Margin="0 20 0 0"
                            BorderBrush="LightGray" BorderThickness="1">
                            <Border.Clip>
                                <RectangleGeometry RadiusX="{Binding ElementName=border,Path=CornerRadius.BottomLeft}"
                                               RadiusY="{Binding Path=RadiusX,RelativeSource={RelativeSource Self}}">
                                    <RectangleGeometry.Rect>
                                        <MultiBinding Converter="{BorderClipConverter}">
                                            <Binding Path="ActualWidth" ElementName="border" />
                                            <Binding Path="ActualHeight" ElementName="border" />
                                        </MultiBinding>
                                    </RectangleGeometry.Rect>
                                </RectangleGeometry>

                            </Border.Clip>
                            <Rectangle x:Name="rect" Fill="#67AA45" Margin="2 2 100 2"
                                   RadiusX="{Binding RelativeSource={RelativeSource AncestorType=Border,Mode=FindAncestor,AncestorLevel=1}, 
                                   Path=CornerRadius.BottomLeft}"
                                   RadiusY="{Binding RelativeSource={RelativeSource Self},Path=RadiusX}"
                                   Height="30" Width="80" HorizontalAlignment="Left" />
                        </Border>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1" />
    </Grid>
</Window>