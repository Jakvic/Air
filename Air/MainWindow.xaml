<Window x:Class="Air.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="10 0 10 0" Orientation="Vertical">
                    <AirButton Content="Hello" Type="Main" HorizontalAlignment="Center"
                           FontSize="16" Margin="10" />
                    <AirButton Content="There" HorizontalAlignment="Center"
                           Margin="10" Type="Default" FontSize="16" />
                </StackPanel>
                <AirButton Content="Jakic" VerticalAlignment="Center" FontSize="18" />
            </StackPanel>
            <StackPanel Margin="10 0 10 0" Orientation="Horizontal"
                        VerticalAlignment="Center">
                <AirButton Content="Hello" Type="Main" Margin="10"
                           FontSize="16" />
                <AirButton Content="There" Type="Default"
                           Margin="10" FontSize="16" />
                <Button Content="Jakvic" FontSize="16" Padding="6"
                        VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <TextBox Text="Pick Up!"  Margin="10 0 0 0" FontSize="18" Padding="4"
                     HorizontalAlignment="Center" VerticalAlignment="Center" />

                <AirTextBox Text="Fuck" FontSize="18" Margin="10"
                            Width="150"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1">

        </Grid>
    </Grid>
</Window>