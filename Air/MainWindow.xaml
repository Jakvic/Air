<Window x:Class="Air.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Air"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <AirPanel Grid.Column="1" Space="10" 
                  VerticalAlignment="Center" HorizontalAlignment="Center">
            <AirButton Content="Hello" Type="Main" FontSize="16" />
            <!-- <AirButton Content="Hello" Type="Main" FontSize="16" IsEnabled="False" /> -->
            <AirButton Content="There" Type="Default" FontSize="16"/>
            <!-- <AirButton Content="There" Type="Default" FontSize="16" IsEnabled="False" /> -->
            <Button Content="Jakvic" FontSize="16" />
        </AirPanel>
    </Grid>
</Window>